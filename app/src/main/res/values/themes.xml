<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotificationPermissions" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- color Primary is the selected fragment color -->
         <item name="colorPrimary">@color/purple</item>
         <item name="backgroundColor">@color/backgroundColor</item>

        //text color on buttons
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        //checkbox colors
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorSecondaryVariant">@color/darkGrey</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>

        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NotificationPermissions.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NotificationPermissions.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NotificationPermissions.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Dark" />
</resources>