<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotificationPermissions" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/roseEbony</item>
        <item name="colorPrimaryVariant">@color/oldRose</item>

        //text color on buttons
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        //checkbox colors
        <item name="colorSecondary">@color/firebrick</item>
        <item name="colorSecondaryVariant">@color/tumbleWeed</item>
        <item name="colorOnSecondary">@color/eerieBlack</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.NotificationPermissions.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.NotificationPermissions.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.NotificationPermissions.PopupOverlay"
        parent="ThemeOverlay.AppCompat.Light" />
</resources>