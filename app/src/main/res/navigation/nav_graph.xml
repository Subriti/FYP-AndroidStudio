<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.notificationpermissions.HomeFragment"
        android:label="Donation Feed"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_userViewProfileFragment2"
            app:destination="@id/userViewProfileFragment2" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.example.notificationpermissions.ChatFragment"
        android:label="Chat Zone"
        tools:layout="@layout/fragment_chat" />
    <fragment
        android:id="@+id/addPostFragment"
        android:name="com.example.notificationpermissions.AddPostFragment"
        android:label="Add New Post"
        tools:layout="@layout/fragment_add_post" >
        <action
            android:id="@+id/action_addPostFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="com.example.notificationpermissions.HistoryFragment"
        android:label="Donation History"
        tools:layout="@layout/fragment_history" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.notificationpermissions.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profileFragment_to_viewPostFragment"
            app:destination="@id/viewPostFragment" />
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment
        android:id="@+id/viewPostFragment"
        android:name="com.example.notificationpermissions.ViewPostFragment"
        android:label="Post"
        tools:layout="@layout/view_user_post_item" >
        <action
            android:id="@+id/action_viewPostFragment_to_editPostFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/action_viewPostFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/editPostFragment"
        android:name="com.example.notificationpermissions.EditPostFragment"
        android:label="Edit Post"
        tools:layout="@layout/fragment_edit_post" >
        <action
            android:id="@+id/action_editPostFragment_to_viewPostFragment"
            app:destination="@id/viewPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.example.notificationpermissions.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_changePasswordFragment2"
            app:destination="@id/changePasswordFragment2" />
    </fragment>
    <fragment
        android:id="@+id/changePasswordFragment2"
        android:name="com.example.notificationpermissions.ChangePasswordFragment"
        android:label="Change Password"
        tools:layout="@layout/fragment_change_password" >
        <action
            android:id="@+id/action_changePasswordFragment2_to_profileFragment"
            app:destination="@id/profileFragment" />
    </fragment>
    <fragment
        android:id="@+id/userViewProfileFragment2"
        android:name="com.example.notificationpermissions.UserViewProfileFragment"
        android:label="User Profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_userViewProfileFragment2_to_viewPostFragment"
            app:destination="@id/viewPostFragment" />
        <action
            android:id="@+id/action_userViewProfileFragment2_to_chatFragment"
            app:destination="@id/chatFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
</navigation>